{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- assign scheme1 = settings.color_schemes | first -%}
{%- if request.design_mode or section.settings.hide_when_empty == false or section.settings.page.content != blank -%}
  {{ 'section-main-page.css' | asset_url | stylesheet_tag }}

  <div class=" section__inner flex justify-center {{ section.settings.line_separator }} {{ section.settings.visibility }}
      {% if section.settings.color_scheme != scheme1 and section.settings.full_width %}color-{{ section.settings.color_scheme }} gradient{% endif %}
      {% unless section.settings.full_width %}
        {{ section.settings.top_padding }} {{ section.settings.bottom_padding }}
      {% endunless %}"
  >

    <div class="page-width{% if section.settings.page_width == "narrow" %} page-width--narrow{% endif %} w-full">
      <div{% unless section.settings.color_scheme == scheme1 or section.settings.full_width %} class="section-content color-{{ section.settings.color_scheme }} gradient global-media-settings"{% endunless %}>

        {% render 'standard-section-heading',
            section_name: 'page',
            section: section
        %}

        <div class="rte{% if settings.animations_reveal_on_scroll and section.index > 1 %} scroll-trigger animate--fade-in{% endif %}">
          {%- if section.settings.page.content != blank -%}
            {{ section.settings.page.content }}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

