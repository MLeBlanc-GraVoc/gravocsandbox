{%- comment -%}theme-check-disable NestedSnippet,TemplateLength{%- endcomment -%}
{{ 'component-cart.css' | asset_url | stylesheet_tag }}
{{ 'component-totals.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-discounts.css' | asset_url | stylesheet_tag }}
{{ 'component-cart-items.css' | asset_url | stylesheet_tag }}
{{ 'quantity-popover.css' | asset_url | stylesheet_tag }}

{%- unless settings.cart_drawer_enabled -%}
  <script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<div
  class="gradient color-scheme-1 {% if cart == empty %} is-empty{% endif %}"
  id="main-cart"
  data-id="{{ section.id }}"
>
  <div class="page-width">
    <div class="cart-container section__inner">
      <div id="main-cart-items">
        <cart-items class="gradient color-{{ settings.cart_page_color_scheme }} isolate{% if cart == empty %} is-empty{% endif %}">
          <div class="title-wrapper-with-link">
            <h1 class="b-main-title h2 m-0">{{ 'sections.cart.title' | t }}</h1>
            <a href="{% if settings.cart_continue_shopping_link %}{{ settings.cart_continue_shopping_link }}{% else %}{{ routes.all_products_collection_url }}{% endif %}" class="continue-shopping-items underlined-link">
              {{- 'general.continue_shopping' | t -}}
            </a>
          </div>

          <div class="cart__warnings">
            <h2 class="cart__empty-text b-main-title h2">{{ 'sections.cart.empty' | t }}</h2>
            <a href="{% if settings.cart_continue_shopping_link %}{{ settings.cart_continue_shopping_link }}{% else %}{{ routes.all_products_collection_url }}{% endif %}" class="continue-shopping-empty button">
              {{ 'general.continue_shopping' | t }}
            </a>

            {%- if settings.cart_show_login and shop.customer_accounts_enabled and customer == null -%}
              <h2 class="cart__login-title h4">{{ 'sections.cart.login.title' | t }}</h2>
              <p class="cart__login-paragraph">
                {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
              </p>
            {%- endif -%}
          </div>

          <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
            <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
              <div class="js-cart-items">
                {%- if cart != empty -%}
                  <table class="cart-items">
                    <caption class="visually-hidden">
                      {{ 'sections.cart.title' | t }}
                    </caption>
                    <thead>
                    <tr>
                      <th class="caption-with-letter-spacing" colspan="2" scope="col">
                        {{ 'sections.cart.headings.product' | t }}
                      </th>
                      <th class="medium-hide large-up-hide right caption-with-letter-spacing" colspan="1" scope="col">
                        {{ 'sections.cart.headings.total' | t }}
                      </th>
                      <th
                          class="cart-items__heading--wide cart-items__heading--quantity small-hide caption-with-letter-spacing"
                          colspan="1"
                          scope="col"
                      >
                        {{ 'sections.cart.headings.quantity' | t }}

                        
                      </th>
                      <th class="small-hide right caption-with-letter-spacing" colspan="1" scope="col">
                        {{ 'sections.cart.headings.total' | t }}
                      </th>
                    </tr>
                    </thead>

                    <tbody>
                      {% for item in cart.items %}
                        {% assign product_inventory = item.variant.inventory_quantity %}
                        {% assign quantity_ordered = item.quantity %}
                      
                        <div class="cart-item">
                          <p><strong>{{ item.product.title }}</strong></p>
                          <p>Qty: {{ quantity_ordered }}</p>
                      
                          {% if product_inventory < quantity_ordered %}
                            {% assign backordered_qty = quantity_ordered | minus: product_inventory %}
                            {% if backordered_qty > 0 %}
                              <p class="backorder-note text-yellow-600">
                                {{ backordered_qty }} item{% if backordered_qty > 1 %}s{% endif %} on backorder
                              </p>
                            {% endif %}
                          {% endif %}
                        </div>
                      {% endfor %}
                      
                    </tbody>
                  </table>
                {%- endif -%}
              </div>
            </div>

            <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
            <p
                class="visually-hidden"
                id="shopping-cart-line-item-status"
                aria-live="polite"
                aria-hidden="true"
                role="status"
            >
              {{ 'accessibility.loading' | t }}
            </p>
          </form>
        </cart-items>
      </div>

      <div class="cart__footer isolate" id="cart-summary">

        <div class="cart__blocks gradient color-scheme-2 p-2 border-radius-panel">
          {%- if settings.cart_shipping_bar_show -%}
            <div class="free-shipping-bar-container js-free-shipping-bar">
              {%- render 'free-shipping-bar' -%}
            </div>
          {%- endif -%}
          
          <div class="js-subtotal">
            <div>
              {%- if cart.cart_level_discount_applications.size > 0 -%}
                <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                  {%- for discount in cart.cart_level_discount_applications -%}
                    <li class="discounts__discount t5">
                      {%- render 'icon-discount' -%}
                      {{ discount.title }}
                      (-{{ discount.total_allocated_amount | money }})
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

            <div class="totals flex-wrap gap-1 mb-1 last-child:mb-2">
              <h2 class="totals__total text-body font-bold">{{ 'sections.cart.estimated_total' | t }}</h2>
              <p class="totals__total-value h6-size font-bold">{{ cart.total_price | money_with_currency }}</p>
            </div>

            {%- if settings.cart_show_tax_message -%}
            <small class="footer-message caption-large rte">
              {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
              {%- elsif cart.taxes_included -%}
                {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
              {%- elsif shop.shipping_policy.body != blank -%}
                {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
              {%- else -%}
                {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
              {%- endif -%}
            </small>
            {%- endif -%}
          </div>

          {%- if settings.cart_show_shipping_calculator -%}
            <custom-accordion class="no-js-hidden">
              <details>
                <summary class="arrow-inset">
                  <span class="summary__title font-medium t4 pl-2 pr-2 flex items-center">
                    {% render 'icon', icon: 'truck' %}
                    {{ 'sections.cart.shipping_calculator.link_title' | t }}
                    {% render 'icon-caret' %}
                  </span>
                </summary>
                <div class="custom-accordion__panel custom-scrollbar pl-2 pr-2">
                  {%- render 'shipping-calculator', id: 'cart' -%}
                </div>
              </details>
            </custom-accordion>
          {%- endif -%}

          {%- if settings.cart_show_cart_note -%}
            <custom-accordion>
              <details>
                <summary class="arrow-inset">
                  <span class="summary__title font-medium t4 pl-2 pr-2 flex items-center">
                    {% render 'icon-note' %}
                    {{ 'sections.cart.note' | t }}
                    {% render 'icon-caret' %}
                  </span>
                </summary>
                <div class="custom-accordion__panel custom-scrollbar pl-2 pr-2">
                  <cart-note class="cart__note field mb-15">
                    <label class="visually-hidden" for="Cart-note">{{ 'sections.cart.note' | t }}</label>
                    <textarea
                        class="text-area field__input"
                        name="note"
                        form="cart"
                        id="Cart-note"
                        placeholder="{{ 'sections.cart.note' | t }}"
                    >{{ cart.note }}</textarea>
                  </cart-note>
                </div>
              </details>
            </custom-accordion>
          {%- endif -%}

          {%- if settings.cart_terms -%}
            <div class="footer-message t4">
              <input type="checkbox" class="field__checkbox" id="cart-drawer-terms-cart" required form="cart"
                     oninvalid='this.setCustomValidity("{{ 'sections.cart.terms.error' | t }}")' onchange="this.setCustomValidity('')"/>
              <label for="cart-drawer-terms-cart">{{ 'sections.cart.terms.agreement_html' | t: terms: settings.cart_terms }}</label>
            </div>
          {%- endif -%}

          <div class="cart__ctas-container">
            <div class="cart__ctas">
              <noscript>
                <button type="submit" class="cart__update-button button button--secondary" form="cart">
                  {{ 'sections.cart.update' | t }}
                </button>
              </noscript>

              <button
                type="submit"
                id="checkout"
                class="cart__checkout-button lh-1 button-with-icon button-with-icon--right button"
                name="checkout"
                {% if cart == empty %}
                  disabled
                {% endif %}
                form="cart"
              >
                {% render 'icon-padlock' %}
                {{ 'sections.cart.checkout' | t }}
              </button>
            </div>

            {%- if additional_checkout_buttons -%}
              <div class="cart__dynamic-checkout-buttons additional-checkout-buttons">
                {{ content_for_additional_checkout_buttons }}
              </div>
            {%- endif -%}
            <div id="cart-errors"></div>
          </div>
        </div>

        {%- assign scheme1 = settings.color_schemes | first -%}
        {%- if settings.cart_related_show -%}
          <div class="cart__recommendations">
            {%- render 'mini-card-list',
                mode: 'related',
                section_id: 'main-cart',
                layout: settings.cart_related_layout,
                make_collapsible_row: false,
                enable_quick_add: settings.enable_quick_add,
                product_list_limit: settings.cart_related_limit,
                block_heading: settings.cart_related_heading,
                products_per_page: 1,
                color_scheme: settings.cart_related_color_scheme,
                line_color_scheme: scheme1
            -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    function isIE() {
      const ua = window.navigator.userAgent;
      const msie = ua.indexOf('MSIE ');
      const trident = ua.indexOf('Trident/');

      return msie > 0 || trident > 0;
    }

    if (!isIE()) return;
    const cartSubmitInput = document.createElement('input');
    cartSubmitInput.setAttribute('name', 'checkout');
    cartSubmitInput.setAttribute('type', 'hidden');
    document.querySelector('#cart').appendChild(cartSubmitInput);
    document.querySelector('#checkout').addEventListener('click', function (event) {
      document.querySelector('#cart').submit();
    });
  });
</script>

{% schema %}
{
  "name": "Cart",
  "class": "section-main-cart cart__footer-wrapper",
  "settings": [
    {
      "type": "paragraph",
      "content": "Refer to [Cart theme settings](/editor?context=theme&category=cart) for page settings."
    }
  ]
}
{% endschema %}
