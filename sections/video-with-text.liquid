{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- liquid
  if section.settings.video_url != blank and section.settings.video_url != 'https://www.youtube.com/watch?v=_9VUPq3SxOc' or section.settings.video != blank
    assign is_video = true
  endif
-%}

{%- if request.design_mode or section.settings.hide_when_empty == false or is_video -%}
  {%- if section.index < 3 or request.design_mode -%}
    {{ 'section-video.css' | asset_url | stylesheet_tag }}
    {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
    {{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
  {%- else -%}
    <link rel="stylesheet" href="{{ 'section-video.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'component-image-with-text.css' | asset_url }}" media="print" onload="this.media='all'">
  {%- endif -%}

  {%- liquid
    if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout contains 'no-overlap'
      assign remove_color_classes = true
    endif

    assign video_id = section.settings.video.id | default: section.settings.video_url.id
    assign video_alt = section.settings.video.alt | default: section.settings.description
    assign alt = 'sections.video.load_video' | t: description: video_alt | escape
    assign poster = section.settings.image | default: section.settings.video.preview_image

    assign loop_video = false
    if section.settings.playback_end == 'loop'
      assign loop_video = true
    endif

    assign autoplay_video = section.settings.enable_video_autoplay

    assign fetch_priority = 'low'
    assign loading = 'lazy'
    if request.design_mode or section.index < 3
      assign fetch_priority = 'high'
      assign loading = 'eager'
    endif

    if section.index == 1
      assign preload = true
    else
      assign preload = false
    endif

    assign image_replace =  '<img '
    if section.index > 2
      assign image_replace =  '<img alt="' | append: alt | append: '" loading="' | append: loading | append: '" fetchpriority="' | append: fetch_priority | append: '" '
    endif
  -%}

  <div class="section__inner {{ section.settings.line_separator }} {{ section.settings.top_padding }} {{ section.settings.bottom_padding }} gradient color-{{ section.settings.section_color_scheme }} {{ section.settings.visibility }}">
    <div class="page-width">
      <div class="image-with-text isolate
        {% unless section.settings.color_scheme == section.settings.section_color_scheme %} image-with-text--{{ section.settings.content_layout }}{% endunless %}
        {% unless section.settings.color_scheme == section.settings.section_color_scheme or section.settings.content_layout == 'no-overlap-separate' %} collapse-corners{% endunless %}
        {% if section.settings.desktop_media_scale != 100 %} image-scaled{% endif %}
        {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
       style="--image-width: {{ section.settings.desktop_media_width }}%;--image-scale:{{ section.settings.desktop_media_scale | times: 0.01 }}"
      >
        <div class="image-with-text__container flex section-height-responsive--desktop
            {% if section.settings.layout == 'text_first' %} image-with-text__container--reverse{% endif %}"
             style="--mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px;"
        >
          <div class="image-with-text__media-item flex__item"{% if section.settings.video_cover %} data-scale-video{% endif %}>

            <noscript>
              <div class="image-with-text__media video-section__media h-full gradient global-media-settings
                section-height-responsive--desktop section-height-responsive--mobile
                {% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}
                {% if section.settings.video_cover %} media-fit-cover{% endif %}"
              >
                {%- if section.settings.video == null and section.settings.video_url != null -%}
                  <a
                    href="{{ section.settings.video_url }}"
                    target="_blank"
                    class="video-section__poster media media--transparent{% if poster == null %} video-section__placeholder{% endif %}"
                  >
                    <span class="video-section__poster media deferred-media__poster media--landscape">
                      {%- if poster != null -%}
                        {{
                          poster
                          | image_url: width: 3840
                          | image_tag: widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt, fetchpriority: fetch_priority, loading: loading, preload: preload
                        }}
                      {%- else -%}
                        {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                      {%- endif -%}
                      <button class="deferred-media__poster-button deferred-media__poster-button--{{ section.settings.controls_position }} deferred-media__poster-button--{{ section.settings.playback_controls }} button-control tap-target motion-reduce"
                        aria-label="{{ 'sections.video.toggle' | t }}"
                      >
                        {%- render 'icon-play' -%}
                        {%- render 'icon-pause' -%}
                        {%- render 'icon-refresh' -%}
                      </button>
                    </span>
                  </a>
                {%- else -%}
                  {{
                    section.settings.video
                    | video_tag: image_size: '1100x', loop: loop_video, controls: true, muted: false, poster: '' | replace: '<img ', image_replace
                  }}
                {%- endif -%}
              </div>
            </noscript>

            <{% if autoplay_video %}div{% else %}deferred-media{% endif %}
              class="image-with-text__media video-section__media h-full deferred-media no-js-hidden gradient global-media-settings
                section-height-responsive--desktop section-height-responsive--mobile
                global-media-settings{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}
                {% if section.settings.video_cover %} media-fit-cover{% endif %}
                {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
              data-media-id="{{ video_id }}"
              style="--ratio-percent: 0; --mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px"
            >
              <div
                id="Deferred-Poster-Modal-{{ video_id }}"
                class="video-section__poster media deferred-media__poster media--landscape"
              >
                {%- if poster != null -%}
                  {{
                    poster
                    | image_url: width: 3840
                    | image_tag: widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt, fetchpriority: fetch_priority, loading: loading, preload: preload
                  }}
                {%- else -%}
                  {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                {%- endif -%}
                <button class="deferred-media__poster-button deferred-media__poster-button--{{ section.settings.controls_position }} deferred-media__poster-button--{{ section.settings.playback_controls }} button-control tap-target motion-reduce" aria-label="{{ 'sections.video.toggle' | t }}">
                  {%- render 'icon-play' -%}
                  {%- render 'icon-pause' -%}
                  {%- render 'icon-refresh' -%}
                </button>
              </div>

            {% if autoplay_video == false %}
              <template>
            {% endif %}
                <custom-video data-video-id="{{ video_id }}" data-end-state="{{ section.settings.playback_end }}">
                  {%- if section.settings.video == null and section.settings.video_url != null -%}
                    {%- liquid
                      assign extra_params = ''

                      if loop_video
                        assign extra_params = '&playlist=' | append: video_id
                      else
                        assign extra_params = '&loop=0'
                      endif

                      if autoplay_video
                        assign extra_params = extra_params | append: '&mute=1&muted=1'
                      endif

                      if section.settings.playback_controls == 'custom'
                        assign extra_params = extra_params | append: '&controls=0'
                      endif
                    -%}

                    {%- if section.settings.video_url.type == 'youtube' -%}
                      <iframe
                        src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&rel=0&playsinline=1&modestbranding=1&iv_load_policy=3&autoplay=1{{ extra_params }}"
                        class="js-youtube js-video"
                        data-aspect-ratio="{{ section.settings.video_aspect_ratio }}"
                        id="{{ video_id }}"
                        allow="autoplay; encrypted-media"
                        allowfullscreen
                        title="{{ section.settings.description | escape }}"
                      ></iframe>
                    {%- else -%}
                      <iframe
                        src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1&transparent=0{{ extra_params }}"
                        class="js-vimeo js-video"
                        data-aspect-ratio="{{ section.settings.video_aspect_ratio }}"
                        id="{{ video_id }}"
                        allow="autoplay; encrypted-media"
                        allowfullscreen
                        title="{{ section.settings.description | escape }}"
                      ></iframe>
                    {%- endif -%}
                  {%- else -%}
                    {%- liquid
                      assign controls = true
                      if section.settings.playback_controls == 'custom'
                        assign controls = false
                      endif

                      assign muted = false
                      if autoplay_video
                        assign muted = true
                      endif
                    -%}
                    {{
                      section.settings.video
                      | video_tag:
                        class: 'js-video',
                        image_size: '1100x',
                        autoplay: true,
                        loop: loop_video,
                        controls: controls,
                        muted: muted,
                        poster: ''
                      | replace: '<img ', image_replace
                    }}
                  {%- endif -%}
                </custom-video>
              {% if autoplay_video == false %}
                </template>
              {% endif %}
            </{% if autoplay_video %}div{% else %}deferred-media{% endif %}>

          </div>
          <div class="image-with-text__text-item section-height-responsive--desktop flex__item">
            <div
                id="ImageWithText--{{ section.id }}"
                class="image-with-text__content{% if section.settings.show_content_shadow and remove_color_classes != true %} card--shadow{% endif %} self-{{ section.settings.mobile_content_alignment }} text-{{ section.settings.mobile_content_alignment }} md:self-{{ section.settings.desktop_content_alignment }} md:text-{{ section.settings.desktop_content_alignment }} content-container{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
            >
              {%- liquid
                assign quick_filter_max_width = 0
                assign quick_filter_block = section.blocks | where: 'type', 'quick_filter' | first
                if quick_filter_block
                  assign quick_filter_max_width = quick_filter_block.settings.max_width
                endif
              -%}
              <div class="section-content lg:p-0 max-w-{{ section.settings.text_max_width }} ml-auto mr-auto"
               {% if quick_filter_max_width > 0 %}style="--quick-filter-max-width: {{ quick_filter_max_width }}px"{% endif %}
              >
                {%- liquid
                  for block in section.blocks
                    render 'standard-blocks', section_name: 'video-with-text', block: block
                  endfor
                -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

