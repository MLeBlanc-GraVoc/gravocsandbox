{%- liquid
  assign content_layout = "no-overlap-separate"

  if section.settings.color_scheme == section.settings.section_color_scheme and content_layout contains 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section__inner {{ section.settings.top_padding }} {{ section.settings.bottom_padding }} gradient color-{{ section.settings.section_color_scheme }}">
  {% capture header_content %}
    {%- if section.settings.button_label != blank -%}
      {% capture additional_button %}
        <div
            class="{% if section.settings.button_style == 'link' %}mt-1{% else %}mt-2{% endif %}
            justify-{{ section.settings.mobile_heading_alignment | default: section.settings.mobile_heading_alignment }}
            md:justify-{{ section.settings.desktop_heading_alignment | default: section.settings.desktop_heading_alignment }}
            {% if section.settings.button_label != blank %} banner__buttons--multiple{% endif %}
            {% if settings.animations_reveal_on_scroll and section.index > 1 %} scroll-trigger animate--fade-in{% endif %}"
        >
          {%- if section.settings.button_label != blank -%}
            <a
                {% if section.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.button_link }}"
                {% endif %}
                class="{{ section.settings.button_text_size }} {% if section.settings.button_style == 'link' %}link un-underlined-link{% else %}button button--{{ section.settings.button_style }}{% endif %}{% if section.settings.button_style_show_arrow %} button-with-icon button-with-icon--right{% endif %}"
            >
              {{- section.settings.button_label | escape -}}
              {% if section.settings.button_style_show_arrow %}
                {% render 'icon-arrow' %}
              {% endif %}
            </a>
          {%- endif -%}
        </div>
      {% endcapture %}
    {%- endif -%}

    {%- liquid
      if section.settings.show_header_beside
        assign custom_class = "banner__box section-content " | append: section.settings.mobile_content_position | append: ' ' | append: section.settings.desktop_content_position
      elsif section.settings.image == blank
        assign custom_class = "title-wrapper page-width mb-3"
        unless section.settings.full_width
          assign custom_class = custom_class | append: ' page-width--narrowest'
        endunless
      else
        assign custom_class = "title-wrapper page-width mb-3"
      endif
    %}

    {% render 'standard-section-heading',
        section_name: 'registration',
        section: section,
        custom_class: custom_class,
        view_all: additional_button
    %}
  {% endcapture %}

  {%- unless section.settings.show_header_beside -%}
    {{ header_content }}
  {%- endunless -%}

  <div class="login-page registration-page page-width{% if section.settings.image == blank and section.settings.show_header_beside == false %}{% unless section.settings.full_width %} page-width--narrowest{% endunless %}{% elsif section.settings.full_width %} page-width--wide{% endif %}">
    <div class="image-with-text isolate
        {% if section.settings.image == blank and section.settings.show_header_beside == false %} image-with-text--without-image{% endif %}
        {% unless section.settings.color_scheme == section.settings.section_color_scheme %} image-with-text--{{ content_layout }}{% endunless %}
        {% unless section.settings.color_scheme == section.settings.section_color_scheme or content_layout == 'no-overlap-separate' or section.settings.image == blank and section.settings.show_header_beside == false %} collapse-corners{% endunless %}
        {% if settings.animations_reveal_on_scroll and section.index > 1 %} scroll-trigger animate--fade-in{% endif %}"
         style="--image-width: {{ section.settings.desktop_media_width }}%;"
    >
      <div class="image-with-text__container flex xs:image-with-text__container--reverse
        {% if section.settings.layout == 'text_first' %} image-with-text__container--reverse{% endif %}"
           style="--mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px;"
      >
        {% if section.settings.image != blank or section.settings.show_header_beside %}
          <div class="image-with-text__media-item flex__item">
            <div
                class="image-with-text__media image-overlay global-media-settings media section-height-responsive--mobile
                {% if section.settings.show_header_beside %} color-{{ section.settings.image_overlay_color_scheme }}{% endif %}"
                style="--overlay-opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};"
            >
              {% if section.settings.image != blank %}
                {%- assign widths = '535, 750, 1070, 1500' -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                {{
                section.settings.image
                | image_url: width: 1500
                | image_tag: sizes: sizes, widths: widths, fetchpriority: 'high'
                }}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              {% endif %}

              {% if section.settings.show_header_beside %}
                {{ header_content }}
              {% endif %}
            </div>
          </div>
        {% endif %}

        <div class="image-with-text__text-item flex__item{% if section.settings.desktop_section_height > 0 %} section-height-responsive--desktop{% endif %}">
          <div
              id="ImageWithText--{{ section.id }}"
              class="image-with-text__content content-container
                {% if section.settings.show_content_shadow and remove_color_classes != true %} card--shadow{% endif %}
                {% if section.settings.image == blank and section.settings.show_header_beside == false %} h-auto{% endif %}
                {% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
          >
            <div class="section-content lg:p-0 mr-auto ml-auto xs:w-full">
              <div class="customer login">
                <svg style="display: none">
                  <symbol id="icon-error" viewBox="0 0 512 512" style="color: red;">
                    <path d="M448 256c0-106-86-192-192-192S64 150 64 256s86 192 192 192 192-86 192-192z" fill="none" stroke="currentColor"
                          stroke-miterlimit="10" stroke-width="32"/>
                    <path d="M250.26 166.05L256 288l5.73-121.95a5.74 5.74 0 00-5.79-6h0a5.74 5.74 0 00-5.68 6z" fill="none"
                          stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/>
                    <path d="M256 367.91a20 20 0 1120-20 20 20 0 01-20 20z" fill="currentColor"/>
                  </symbol>
                </svg>
                <h1 class="b-main-title h2 mb-15 text-{{ section.settings.mobile_content_alignment }} md:text-{{ section.settings.desktop_content_alignment }}">
                  {{ 'customer.register.title' | t }}
                </h1>
                <div class="section-content p-0">
                  {%- for block in section.blocks -%}
                    {%- if block.type == 'registration_form' -%}
                      {%- form 'create_customer', novalidate: 'novalidate', class: 'narrow-form mb-3 last-child:mb-0' -%}
                        {%- if form.errors -%}
                          <p class="form__message t5 mb-0 mt-0 t5" tabindex="-1" autofocus>
                            <svg aria-hidden="true" focusable="false">
                              <use href="#icon-error" />
                            </svg>
                            {{ 'templates.contact.form.error_heading' | t }}
                          </p>
                          <ul class="mt-0 mb-2 t5">
                            {%- for field in form.errors -%}
                              <li>
                                {%- if field == 'form' -%}
                                  {{ form.errors.messages[field] }}
                                {%- else -%}
                                  {{ form.errors.translated_fields[field] | capitalize }}
                                  {{ form.errors.messages[field] }}
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                        <div class="field{% if section.settings.desktop_content_alignment == 'center' %} ml-auto mr-auto{% elsif section.settings.desktop_content_alignment == 'right' %} ml-auto{% endif %}">
                          <input
                            type="text"
                            name="customer[first_name]"
                            id="RegisterForm-FirstName"
                            {% if form.first_name %}
                              value="{{ form.first_name }}"
                            {% endif %}
                            autocomplete="given-name"
                            placeholder="{{ 'customer.register.first_name' | t }}"
                          >
                          <label for="RegisterForm-FirstName">
                            {{ 'customer.register.first_name' | t }}
                          </label>
                        </div>
                        <div class="field{% if section.settings.desktop_content_alignment == 'center' %} ml-auto mr-auto{% elsif section.settings.desktop_content_alignment == 'right' %} ml-auto{% endif %}">
                          <input
                            type="text"
                            name="customer[last_name]"
                            id="RegisterForm-LastName"
                            {% if form.last_name %}
                              value="{{ form.last_name }}"
                            {% endif %}
                            autocomplete="family-name"
                            placeholder="{{ 'customer.register.last_name' | t }}"
                          >
                          <label for="RegisterForm-LastName">
                            {{ 'customer.register.last_name' | t }}
                          </label>
                        </div>
                        <div class="field{% if section.settings.desktop_content_alignment == 'center' %} ml-auto mr-auto{% elsif section.settings.desktop_content_alignment == 'right' %} ml-auto{% endif %}">
                          <input
                            type="email"
                            name="customer[email]"
                            id="RegisterForm-email"
                            {% if form.email %}
                              value="{{ form.email }}"
                            {% endif %}
                            spellcheck="false"
                            autocapitalize="off"
                            autocomplete="email"
                            aria-required="true"
                            {% if form.errors contains 'email' %}
                              aria-invalid="true"
                              aria-describedby="RegisterForm-email-error"
                            {% endif %}
                            placeholder="{{ 'customer.register.email' | t }}"
                          >
                          <label for="RegisterForm-email">
                            {{ 'customer.register.email' | t }}
                          </label>
                        </div>
                        {%- if form.errors contains 'email' -%}
                          <span id="RegisterForm-email-error" class="form__message relative top--1 mb-0">
                            <svg aria-hidden="true" focusable="false">
                              <use href="#icon-error" />
                            </svg>
                            {{ form.errors.translated_fields.email | capitalize }}
                            {{ form.errors.messages.email }}.
                          </span>
                        {%- endif -%}
                        <div class="field{% if section.settings.desktop_content_alignment == 'center' %} ml-auto mr-auto{% elsif section.settings.desktop_content_alignment == 'right' %} ml-auto{% endif %}">
                          <input
                            type="password"
                            name="customer[password]"
                            id="RegisterForm-password"
                            aria-required="true"
                            {% if form.errors contains 'password' %}
                              aria-invalid="true"
                              aria-describedby="RegisterForm-password-error"
                            {% endif %}
                            placeholder="{{ 'customer.register.password' | t }}"
                          >
                          <label for="RegisterForm-password">
                            {{ 'customer.register.password' | t }}
                          </label>
                        </div>
                        {%- if form.errors contains 'password' -%}
                          <span id="RegisterForm-password-error" class="form__message relative top--1 mb-0">
                            <svg aria-hidden="true" focusable="false">
                              <use href="#icon-error" />
                            </svg>
                            {{ form.errors.translated_fields.password | capitalize }}
                            {{ form.errors.messages.password }}.
                          </span>
                        {%- endif -%}
                        <div class="flex items-center justify-{{ section.settings.mobile_content_alignment }} md:justify-{{ section.settings.desktop_content_alignment }} flex-col gap-1 md:gap-3 lg:flex-row mt-3">
                          <div class="button-container">
                            <button class="button button--primary m-0">
                              {{ 'customer.register.submit' | t }}
                            </button>
                          </div>
                        </div>
                      {%- endform -%}

                    {%- else -%}
                      <div class="text-{{ section.settings.mobile_content_alignment }} md:text-{{ section.settings.desktop_content_alignment }}">
                        {%- render 'standard-blocks', section_name: 'login', block: block -%}
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

