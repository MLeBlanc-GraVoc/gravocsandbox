{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- liquid
  if section.settings.video_url != blank and section.settings.video_url != 'https://www.youtube.com/watch?v=_9VUPq3SxOc' or section.settings.video != blank
    assign is_video = true
  endif
-%}

{%- if request.design_mode or section.settings.hide_when_empty == false or is_video -%}
  {%- if section.index < 3 -%}
    {{ 'section-video.css' | asset_url | stylesheet_tag }}
    {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
  {%- else -%}
    <link rel="stylesheet" href="{{ 'section-video.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="print" onload="this.media='all'">
  {%- endif -%}

  {%- liquid
    assign video_id = section.settings.video.id | default: section.settings.video_url.id
    assign video_alt = section.settings.video.alt | default: section.settings.description
    assign alt = 'sections.video.load_video' | t: description: video_alt | escape
    assign poster = section.settings.cover_image | default: section.settings.video.preview_image

    assign media_aspect_ratio = section.settings.section_ratio
    assign ratio = 1.77
    if media_aspect_ratio == 'landscape_wide'
      assign ratio = 1.77
    elsif media_aspect_ratio == 'landscape_wider'
      assign ratio = 2.33
    elsif media_aspect_ratio == 'landscape'
      assign ratio = 1.33
    elsif media_aspect_ratio == 'square'
      assign ratio = 1
    elsif section.settings.video != null and media_aspect_ratio == 'adapt'
      assign ratio = section.settings.video.aspect_ratio
    endif

    assign loop_video = false
    if section.settings.playback_end == 'loop'
      assign loop_video = true
    endif

    assign autoplay_video = true

    assign fetch_priority = 'low'
    assign loading = 'lazy'
    if request.design_mode or section.index < 3
      assign fetch_priority = 'high'
      assign loading = 'eager'
    endif

    if section.index == 1
      assign preload = true
    else
      assign preload = false
    endif

    assign image_replace =  '<img '
    if section.index > 2
      assign image_replace =  '<img alt="' | append: alt | append: '" loading="' | append: loading | append: '" fetchpriority="' | append: fetch_priority | append: '" '
    endif
  -%}

  {%- capture sizes -%}
    {% if section.settings.full_width -%}
      100vw
    {%- else -%}
      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px)
      calc(100vw - 10rem), 100vw
    {%- endif %}
  {%- endcapture -%}

  <div class="color-{{ section.settings.color_scheme }} isolate gradient {{ section.settings.line_separator }} {{ section.settings.visibility }}">
    <div class="section__inner
      {% unless section.settings.full_width %}
        page-width {{ section.settings.top_padding }} {{ section.settings.bottom_padding }}
      {% else %}
        pt-0 pb-0
      {% endunless %}
      {% if section.settings.show_text_below %} mobile-text-below{% endif %}"
    >
      <div class="video-section video-banner-section
          {% unless section.settings.full_width %}
            {% if section.settings.container_color_scheme == section.settings.color_scheme and section.settings.show_text_below %}
              md:border-radius-media is-standard-color-scheme
            {% else %}
              border-radius-media
            {% endif %}
              overflow-hidden
          {% endunless %}"
           data-scale-video
      >

        {% if section.settings.full_width and section.settings.full_width_animate %}
          <script src="{{ 'full-width-animate.js' | asset_url }}" defer="defer"></script>
          <full-width-animate>
        {% endif %}

        <div
            id="Banner-{{ section.id }}"
            class="banner image-overlay banner--one-image
            banner--content-align-{{ section.settings.desktop_content_alignment }}
            banner--content-align-mobile-{{ section.settings.mobile_content_alignment }}
            {% if media_aspect_ratio == 'custom' %} section-height-responsive--desktop{% else %} ratio{% endif %}
            {% if media_aspect_ratio != 'custom' %} xs:h-auto{% endif %}
            {% if media_aspect_ratio == 'custom' %} md:h-auto{% endif %}
            {% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}
            {% if section.settings.show_text_below == false %}{% if section.settings.show_text_box == 'mobile' or section.settings.show_text_box == 'always' %} banner--mobile-box{% else %} banner--mobile-transparent{% endif %}{% endif %}
            {% if section.settings.show_text_box == 'desktop' or section.settings.show_text_box == 'always' %} banner--desktop-box{% else %} banner--desktop-transparent{% endif %}
            {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"

            style="--overlay-opacity: {{ section.settings.video_overlay_opacity | divided_by: 100.0 }};
                --color-overlay: {{ section.settings.color_overlay }};
            {% if media_aspect_ratio == 'custom' %}
              --mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px;
            {% else %}
              --ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;
            {% endif %}"

            {% if section.settings.reveal_content_timer > 0 and request.design_mode == false %}
              data-content-timer="{{ section.settings.reveal_content_timer }}"
            {% endif %}
        >
          <{% if autoplay_video %}div{% else %}deferred-media{% endif %}
            class="video-section__media banner__media deferred-media gradient media-fit-cover
              {% if section.settings.full_width %} global-media-settings--full-width{% endif %}
              {% if media_aspect_ratio == 'custom' %} section-height-responsive--mobile{% else %} ratio{% endif %}
              {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
              data-media-id="{{ video_id }}"
              {% if media_aspect_ratio != 'custom' %}
                style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
              {% else %}
                style="--ratio-percent: 0; --mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px"
              {% endif %}
          >
            <div
              id="Deferred-Poster-Modal-{{ video_id }}"
              class="video-section__poster media deferred-media__poster media--landscape"
            >
              {%- if poster != null -%}
                {{
                  poster
                  | image_url: width: 3840
                  | image_tag: sizes: sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt, fetchpriority: fetch_priority, loading: loading, preload: preload
                }}
              {%- else -%}
                {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder placeholder-svg--cover' }}
              {%- endif -%}

              {% if section.settings.show_play_pause %}
                <button class="deferred-media__poster-button no-js-hidden deferred-media__poster-button--bottom_right deferred-media__poster-button--custom button-control tap-target motion-reduce"
                  aria-label="{{ 'sections.video.toggle' | t }}"
                >
                  {%- render 'icon-play' -%}
                  {%- render 'icon-pause' -%}
                  {%- render 'icon-refresh' -%}
                </button>
              {% endif %}
            </div>

          {% if autoplay_video == false %}
            <template tabindex="-1">
          {% endif %}
              <custom-video data-video-id="{{ video_id }}" data-end-state="{{ section.settings.playback_end }}" class="pointer-events-none" tabindex="-1">
                {%- if section.settings.video == null and section.settings.video_url != null -%}
                  {%- liquid
                    assign extra_params = ''

                    if loop_video
                      assign extra_params = '&playlist=' | append: video_id
                    else
                      assign extra_params = '&loop=0'
                    endif

                    if autoplay_video
                      assign extra_params = extra_params | append: '&mute=1&muted=1'
                    endif
                  -%}

                  {%- if section.settings.video_url.type == 'youtube' -%}
                    <iframe
                      src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&rel=0&playsinline=1&modestbranding=1&iv_load_policy=3&controls=0&autoplay=1{{ extra_params }}&disablekb=1"
                      class="js-youtube js-video js-video-background"
                      data-aspect-ratio="{{ section.settings.video_aspect_ratio }}"
                      id="{{ video_id }}"
                      allow="autoplay; encrypted-media"
                      allowfullscreen
                      tabindex="-1"
                      title="{{ section.settings.description | escape }}"
                    ></iframe>
                  {%- else -%}
                    <iframe
                      src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1&controls=0{{ extra_params }}&background=1&keyboard=0"
                      class="js-vimeo js-video js-video-background"
                      data-aspect-ratio="{{ section.settings.video_aspect_ratio }}"
                      id="{{ video_id }}"
                      aria-label="{{ alt }}"
                      allow="autoplay; encrypted-media"
                      allowfullscreen
                      tabindex="-1"
                      title="{{ section.settings.description | escape }}"
                    ></iframe>
                  {%- endif -%}
                {%- else -%}
                  {%- liquid
                    assign muted = false
                    if autoplay_video
                      assign muted = true
                    endif
                  -%}
                  <div class="visually-hidden">{{ alt }}</div>
                  {{
                    section.settings.video
                    | video_tag:
                      class: 'js-video js-video-background',
                      image_size: '1100x',
                      autoplay: true,
                      loop: loop_video,
                      controls: false,
                      tabindex: '-1',
                      muted: muted,
                      poster: ''
                    | replace: '<img ', image_replace
                  }}
                {%- endif -%}
              </custom-video>
            {% if autoplay_video == false %}
              </template>
            {% endif %}
          </{% if autoplay_video %}div{% else %}deferred-media{% endif %}>

          <div class="banner__content
              {% if media_aspect_ratio == 'custom' and section.settings.show_text_below == false %} section-height-responsive--mobile{% endif %}
              {{ section.settings.mobile_content_position }}
              {{ section.settings.desktop_content_position }} page-width
              {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
          >
            {%- liquid
              assign quick_filter_max_width = 0
              assign quick_filter_block = section.blocks | where: 'type', 'quick_filter' | first
              if quick_filter_block
                assign quick_filter_max_width = quick_filter_block.settings.max_width
              endif
            -%}
            <div class="banner__box section-content max-w-{{ section.settings.content_max_width }} content-container content-container--full-width-mobile color-{{ section.settings.container_color_scheme }} gradient items-{{ section.settings.mobile_content_alignment }} md:items-{{ section.settings.desktop_content_alignment }} text-{{ section.settings.mobile_content_alignment }} md:text-{{ section.settings.desktop_content_alignment }}{% if section.settings.container_color_scheme == section.settings.color_scheme and section.settings.show_text_below and section.settings.full_width == false %} xs:pb-0{% endif %}"
             {% if quick_filter_max_width > 0 %}style="--quick-filter-max-width: {{ quick_filter_max_width }}px"{% endif %}
            >
              {%- liquid
                for block in section.blocks
                  render 'standard-blocks', section_name: 'video-banner', block: block
                endfor
              -%}
            </div>
          </div>
        </div>

        {% if section.settings.full_width and section.settings.full_width_animate %}
          </full-width-animate>
        {% endif %}
      </div>
    </div>
  </div>
{%- endif -%}

