{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- if section.index < 3 or request.design_mode -%}
  {{ 'section-contact-form.css' | asset_url | stylesheet_tag }}
  {{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{%- else -%}
  <link rel="stylesheet" href="{{ 'section-contact-form.css' | asset_url }}" media="print" onload="this.media='all'">
  <link rel="stylesheet" href="{{ 'component-image-with-text.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1 or request.design_mode
    assign fetch_priority = 'high'
  endif

  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout contains 'no-overlap'
    assign remove_color_classes = true
  endif

  assign contact_form_id = section.id | append: '-contact'
-%}

<div class="section__inner {{ section.settings.line_separator }} {{ section.settings.top_padding }} {{ section.settings.bottom_padding }} gradient color-{{ section.settings.section_color_scheme }} {{ section.settings.visibility }}">
  {% capture header_content %}
    {%- if section.settings.button_label != blank -%}
      {% capture additional_button %}
        <div
            class="{% if section.settings.button_style == 'link' %}mt-1{% else %}mt-2{% endif %}
            justify-{{ section.settings.mobile_heading_alignment | default: section.settings.mobile_heading_alignment }}
            md:justify-{{ section.settings.desktop_heading_alignment | default: section.settings.desktop_heading_alignment }}
            {% if section.settings.button_label != blank %} banner__buttons--multiple{% endif %}
            {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
        >
          {%- if section.settings.button_label != blank -%}
            <a
              {% if section.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link }}"
              {% endif %}
              class="{{ section.settings.button_text_size }} {% if section.settings.button_style == 'link' %}link un-underlined-link{% else %}button button--{{ section.settings.button_style }}{% endif %}{% if section.settings.button_style_show_arrow %} button-with-icon button-with-icon--right{% endif %}"
            >
              {{- section.settings.button_label | escape -}}
              {% if section.settings.button_style_show_arrow %}
                {% render 'icon-arrow' %}
              {% endif %}
            </a>
          {%- endif -%}
        </div>
      {% endcapture %}
    {%- endif -%}

    {%- liquid
      if section.settings.show_header_beside
        assign custom_class = "banner__box section-content " | append: section.settings.mobile_content_position | append: ' ' | append: section.settings.desktop_content_position
      elsif section.settings.image == blank
        assign custom_class = "title-wrapper page-width page-width--narrow mb-3"
      else
        assign custom_class = "title-wrapper page-width mb-3"
      endif
    %}

    {% render 'standard-section-heading',
        section_name: 'contact-form',
        section: section,
        custom_class: custom_class,
        view_all: additional_button
    %}
  {% endcapture %}

  {%- unless section.settings.show_header_beside -%}
    {{ header_content }}
  {%- endunless -%}

  <div class="contact page-width{% if section.settings.image == blank and section.settings.show_header_beside == false %} page-width--narrow{% endif %}">
    <div class="image-with-text isolate
        {% if section.settings.image == blank and section.settings.show_header_beside == false %} image-with-text--without-image{% endif %}
        {% unless section.settings.color_scheme == section.settings.section_color_scheme %} image-with-text--{{ section.settings.content_layout }}{% endunless %}
        {% unless section.settings.color_scheme == section.settings.section_color_scheme or section.settings.content_layout == 'no-overlap-separate' or section.settings.image == blank and section.settings.show_header_beside == false %} collapse-corners{% endunless %}
        {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
     style="--image-width: {{ section.settings.desktop_media_width }}%;"
    >
      <div class="image-with-text__container flex {% if section.settings.layout == 'text_first' %} image-with-text__container--reverse{% endif %}"
         style="--mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px;"
      >
        {% if section.settings.image != blank or section.settings.show_header_beside %}
          <div class="image-with-text__media-item flex__item">
            <div
                class="image-with-text__media image-overlay global-media-settings media section-height-responsive--mobile
                {% if section.settings.show_header_beside %} color-{{ section.settings.image_overlay_color_scheme }}{% endif %}"
              style="--overlay-opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};"
            >
              {% if section.settings.image != blank %}
                {%- assign widths = '535, 750, 1070, 1500' -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                {{
                  section.settings.image
                  | image_url: width: 1500
                  | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                }}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              {% endif %}

              {% if section.settings.show_header_beside %}
                {{ header_content }}
              {% endif %}
            </div>
          </div>
        {% endif %}

        <div class="image-with-text__text-item flex__item{% if section.settings.desktop_section_height > 0 %} section-height-responsive--desktop{% endif %}">
          <div
              id="ImageWithText--{{ section.id }}"
              class="image-with-text__content{% if section.settings.show_content_shadow and remove_color_classes != true %} card--shadow{% endif %} content-container{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
          >
            <div class="section-content lg:p-0">
              {%- liquid
                assign contact_form_class = 'isolate w-full'
                if settings.animations_reveal_on_scroll and section.index > 2
                  assign contact_form_class = 'isolate w-full scroll-trigger animate--fade-in'
                endif
              -%}

              {%- form 'contact', id: contact_form_id, class: contact_form_class -%}
              {%- if form.errors -%}
                <div class="form__message">
                  <h3 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                    {% render 'icon-error' %}
                    {{ 'templates.contact.form.error_heading' | t }}
                  </h3>
                </div>
                <ul class="form-status-list caption-large" role="list">
                  <li>
                    <a href="#{{ contact_form_id }}-email" class="link no-scroll">
                      {{ form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email }}
                    </a>
                  </li>
                </ul>
              {%- endif -%}

              {%- liquid
                if request.design_mode
                  assign preview_success = section.settings.preview_success
                else
                  assign preview_success = false
                endif
              -%}

              <div class="grid-2">
                {%- for block in section.blocks -%}
                  {%- assign field_name = block.settings.title | escape -%}

                  {%- if block.type == 'hidden' -%}
                    <input type="hidden" name="contact[{{ field_name }}]" value="{{ block.settings.value | escape }}"/>

                  {%- elsif block.type == 'text' or block.type == 'heading' or block.type == 'spacer' -%}

                    <div class="grid-span-2">
                      {%- liquid
                        assign show_block = false
                        if block.settings.visibility == "always" or block.settings.visibility == blank
                          assign show_block = true
                        elsif block.settings.visibility == "success" and form.posted_successfully? or preview_success
                          assign show_block = true
                        elsif block.settings.visibility == "before" and form.posted_successfully? == false and preview_success == false
                          assign show_block = true
                        endif

                        if show_block
                          render 'standard-blocks', section_name: 'contact-form', block: block, form: form, preview_success: preview_success
                        endif
                      -%}
                    </div>
                  {%- else -%}
                    <div class="grid-span-2{% if block.settings.half_width_on_desktop %} grid-span-1-large{% endif %}">
                      <div class="{% unless block.type == 'checkbox' %}field{% endunless %}{% if block.type == 'dropdown' %} select relative{% endif %}" {{ block.shopify_attributes }}>
                        {%- case block.type -%}
                          {%- when 'name' -%}
                            <input type="text"
                                   id="{{ contact_form_id }}-{{ field_name | handleize }}"
                                   class="field__input"
                                   name="contact[{{ field_name }}]"
                                   autocomplete="name"
                                   value="{% if form[field_name] %}{{ form[field_name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
                                   placeholder="{{ field_name }}"
                                {%- if block.settings.required %}
                                  required
                                  aria-required="true"
                                {%- endif %}
                            >
                            <label class="field__label" for="{{ contact_form_id }}-{{ field_name | handleize }}">
                              {{ field_name }}
                              {%- if block.settings.required -%}
                                <span aria-hidden="true">*</span>
                              {%- endif -%}
                            </label>

                          {%- when 'email' -%}
                            <input type="email"
                                   id="{{ contact_form_id }}-email"
                                   class="field__input"
                                   name="contact[email]"
                                   autocomplete="email"
                                   spellcheck="false"
                                   autocapitalize="off"
                                   value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                                   required
                                   aria-required="true"
                                   placeholder="{{ field_name }}"
                            >
                            <label class="field__label" for="{{ contact_form_id }}-email">
                              {{ field_name }}
                              <span aria-hidden="true">*</span>
                            </label>

                          {%- when 'phone' -%}
                            <input type="tel"
                                   id="{{ contact_form_id }}-{{ field_name | handleize }}"
                                   class="field__input"
                                   name="contact[{{ field_name }}]"
                                   pattern="[0-9\-]*"
                                   autocomplete="tel"
                                   value="{{ form[field_name] }}"
                                {%- if block.settings.required %}
                                  required
                                  aria-required="true"
                                {%- endif %}
                                   placeholder="{{ field_name }}"
                            >
                            <label class="field__label" for="{{ contact_form_id }}-{{ field_name | handleize }}">
                              {{ field_name }}
                              {%- if block.settings.required -%}
                                <span aria-hidden="true">*</span>
                              {%- endif -%}
                            </label>

                          {%- when 'url' -%}
                            <input type="url"
                                   id="{{ contact_form_id }}-{{ field_name | handleize }}"
                                   class="field__input"
                                   name="contact[{{ field_name }}]"
                                   value="{{ form[field_name] }}"
                                {%- if block.settings.required %}
                                  required
                                  aria-required="true"
                                {%- endif %}
                                   placeholder="{{ field_name }}"
                            >
                            <label class="field__label" for="{{ contact_form_id }}-{{ field_name | handleize }}">
                              {{ field_name }}
                              {%- if block.settings.required -%}
                                <span aria-hidden="true">*</span>
                              {%- endif -%}
                            </label>

                          {%- when 'date' -%}
                            <input type="date"
                                   id="{{ contact_form_id }}-{{ field_name | handleize }}"
                                   class="field__input"
                                   name="contact[{{ field_name }}]"
                                   value="{{ form[field_name] }}"
                                {%- if block.settings.required %}
                                  required
                                  aria-required="true"
                                {%- endif %}
                                   placeholder="{{ field_name }}"
                            >
                            <label class="field__label" for="{{ contact_form_id }}-{{ field_name | handleize }}">
                              {{ field_name }}
                              {%- if block.settings.required -%}
                                <span aria-hidden="true">*</span>
                              {%- endif -%}
                            </label>

                          {%- when 'textarea' -%}
                            <textarea id="{{ contact_form_id }}-{{ field_name | handleize }}"
                                  class="text-area field__input"
                                  name="contact[{{ field_name }}]"
                                  rows="10"
                                  placeholder="{{ field_name }}"
                                {%- if block.settings.required %}
                                  aria-required="true"
                                  required
                                {%- endif %}>
                            {{- form[field_name] -}}
                          </textarea>
                          <label class="form__label field__label" for="{{ contact_form_id }}-{{ field_name | handleize }}">
                            {{ field_name }}
                            {%- if block.settings.required -%}
                              <span aria-hidden="true">*</span>
                            {%- endif -%}
                          </label>

                          {%- when 'custom_text' -%}
                            {%- if block.settings.title != blank -%}
                              <input type="text"
                                     id="{{ contact_form_id }}-{{ field_name | handleize }}"
                                     class="field__input"
                                     name="contact[{{ field_name }}]"
                                     value="{{ form[field_name] }}"
                                  {%- if block.settings.required %}
                                    aria-required="true"
                                    required
                                  {%- endif %}
                                     placeholder="{{ field_name }}"
                              >
                              <label class="field__label" for="{{ contact_form_id }}-{{ field_name | handleize }}">
                                {{- field_name -}}
                                {%- if block.settings.required -%}
                                  <span aria-hidden="true">*</span>
                                {%- endif -%}
                              </label>
                            {%- endif -%}

                          {%- when 'dropdown' -%}
                            {%- if block.settings.title != blank -%}
                              {%- assign options = block.settings.options | newline_to_br | strip_newlines | split: '<br />' -%}
                              <select class="styled-select select__select"
                                      name="contact[{{ field_name }}]"
                                      id="{{ contact_form_id }}-{{ field_name | handleize }}"
                                  {%- if block.settings.required %}
                                    aria-required="true"
                                    required
                                  {%- endif %}
                                  placeholder="{{ block.settings.title | escape }}{% if block.settings.required %} *{% endif %}"
                              >
                                <option value="" selected>
                                  {{ block.settings.title | escape }}{% if block.settings.required %} *{% endif %}
                                </option>

                                {% for option in options %}
                                  <option value="{{ option | escape }}"{% if option == form[field_name] %} selected{% endif %}>
                                    {{ option }}
                                  </option>
                                {% endfor %}
                              </select>
                              {% render 'icon-caret' %}

                              <label class="visually-hidden" for="{{ contact_form_id }}-{{ field_name | handleize }}">
                                {{- field_name -}}
                              </label>
                            {%- endif -%}

                          {%- when 'checkbox' -%}
                            {% if block.settings.required == false %}
                              <input type="hidden" name="contact[{{ field_name }}]" value="{{ block.settings.false_value | escape }}">
                            {% endif %}
                            <input type="checkbox" id="{{ contact_form_id }}-{{ field_name | handleize }}" class="field__checkbox" name="contact[{{ field_name }}]" value="{{ block.settings.true_value | escape }}"
                              {% if block.settings.required %} required {% if block.settings.error_message != blank %}oninvalid='this.setCustomValidity("{{ block.settings.error_message }}")' onchange="this.setCustomValidity('')"{% endif %}{% endif %}>
                            <label for="{{ contact_form_id }}-{{ field_name | handleize }}" class="flex items-center">
                              {{- field_name -}}
                            </label>

                        {%- endcase -%}
                      </div>

                      {%- if block.settings.tip != blank -%}
                        <div class="flex items-center gap-05 t6 mt-05">
                          <p class="m-0 opacity-60 rte">{{ block.settings.tip }}</p>
                        </div>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                {%- endfor -%}

                <div class="grid-span-2">
                  <button type="submit" class="button">
                    {{ 'templates.contact.form.send' | t }}
                  </button>

                  {% if section.settings.show_standard_success_message and form.posted_successfully? or preview_success %}
                    <p class="form-status form-status-list form__message lh-15 mb-0" tabindex="-1" autofocus>
                      {% render 'icon-success' %}
                      {{ 'templates.contact.form.post_success' | t }}
                    </p>
                  {% endif %}
                </div>
              </div>

            {%- endform -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

