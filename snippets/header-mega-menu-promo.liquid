    </div>

    {%- if promo.settings.promo_footer_button_label != blank -%}
      <div>
        <a
            href="{{ promo.settings.promo_footer_button_link }}"
            class="{% if promo.settings.promo_footer_button_style == 'link' %}link underlined-link{% else %}button button--{{ promo.settings.promo_footer_button_style }}{% endif %}{% if promo.settings.promo_footer_show_arrow %} button-with-icon button-with-icon--right{% endif %}"
